<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-143dp"
        tools:layout_editor_absoluteY="-30dp" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="180dp"
        android:layout_height="71dp"
        android:text="Welcome!"
        android:textColor="#2A056C"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.060000002" />

    <Button
        android:id="@+id/addworkout"
        android:layout_width="378dp"
        android:layout_height="118dp"
        android:fontFamily="sans-serif-black"
        android:text="Add Workout"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#1E034E"
        android:textSize="40sp"
        android:textStyle="bold"
        app:backgroundTint="#66AA18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        app:layout_constraintVertical_bias="0.13" />

    <Button
        android:id="@+id/addmeal"
        android:layout_width="378dp"
        android:layout_height="118dp"
        android:fontFamily="sans-serif-black"
        android:text="Add Meal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#1E034E"
        android:textSize="40sp"
        android:textStyle="bold"
        app:backgroundTint="#66AA18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addworkout"
        app:layout_constraintVertical_bias="0.07999998" />

    <Button
        android:id="@+id/viewprogress"
        android:layout_width="378dp"
        android:layout_height="118dp"
        android:fontFamily="sans-serif-black"
        android:text="View Progress"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#1E034E"
        android:textSize="40sp"
        android:textStyle="bold"
        app:backgroundTint="#66AA18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addmeal"
        app:layout_constraintVertical_bias="0.16000003" />

</androidx.constraintlayout.widget.ConstraintLayout>